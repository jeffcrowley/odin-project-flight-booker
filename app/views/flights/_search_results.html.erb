<h1>Search Results</h1>
<%= form_tag new_booking_path, method: 'get' do %>
   <table class="table table-striped">
      <thead>
         <tr>
            <th>Select</th>
            <th>From</th>
            <th>To</th>
            <th>Flight #</th>
            <th>Departure Date</th>
            <th>Departure Time</th>
            <th>Arrival Date</th>
            <th>Arrival Time</th>
            <th>Duration</th>
            <th>Price</th>
         </tr>
      </thead>
      <tbody>
         <% @flights.each do |flight| %>
            <tr>
               <td><%= radio_button_tag :flight_id, flight.id %></td>
               <td><%= flight.departure_airport.name %></td>
               <td><%= flight.arrival_airport.name %></td>
               <td><%= flight.flight_num %></td>
               <td><%= flight.departure_date.strftime('%D') %></td>
               <td><%= flight.departure_date.strftime("%l:%M %p") %></td>
               <td><%= flight.arrival_date.strftime('%D') %></td>
               <td><%= flight.arrival_date.strftime("%l:%M %p") %></td>
               <td><%= flight.duration %></td>
               <td><%= "$#{flight.price}" %></td>
            </tr>
         <% end %>
      </tbody>
   </table>
   <%= submit_tag "Confirm Flight", class: 'btn btn-lg btn-success' %>
   <%= hidden_field_tag :passengers, params[:passengers] %>
<% end %>
